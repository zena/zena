if @user.errors.empty?
  # ok
  if @update
    page.redirect_to :action=>"preferences"
  else
    page.replace "user#{@user[:id]}", :partial=>"user/li", :collection=>[@user]
  end
else
  # render form
  if @update
    page.replace_html "user_#{@update}_errors", :inline => error_messages_for("user")
  else
    @groups = secure(Group) { Group.find(:all, :order=>"id") }
    page.replace_html "user#{@user[:id]}", :partial=>"users/form"
  end
end
